#map
    width 100%
    height 100%
    padding 0px
    margin 0px

.map-controls
    position absolute
    width 88px
    height 88px
    top 80px
    right 0
    margin 20px

.map-controls__list
    list-style none
    padding 0
    margin 0

.map-controls__item
    border: 1px solid #aaa;
    width: 40px;
    height: 40px;
    text-align: center;
    margin: 0px;
    float: left;
    background white
    cursor pointer
    box-shadow: 2px 2px 2px rgba(0,0,0,.25);

.map-controls__item-icon
    text-align center
    display block
    margin 5px
    height 40px
    width 40px
    color black
    font-size 17px